<script type="text/template" id="project-view-template">
   <div class="row-fluid">
     <div class="span4">
       <img src="<@- picture @>">
       </div>
       <div class="span8">
          <dl class="dl-horizontal">
            <dt>Project Name</dt>
            <dd><@- title @></dd>
            <dt>Project Owner</dt>
            <dd><a href="/users/<@- owner_id @>" data-href><@- owner_name @></a></dd>
            <dt>Total Fund Needed</dt>
            <dd><@- funding @></dd>
            <dt>Total Tasks Needed</dt>
            <dd><@- task_count @></dd>
            <hr/>
            <dt>Description</dt>
            <dd><@- description @></dd>
            <hr/>
            <h3>Progress</h3>
            <dt>Funding</dt>
            <dd><div class="progress progress-info progress-striped">
              <div class="bar" style="width: <@- funding_percent @>%;"></div>
           </div></dd>
           <dt>Tasks</dt>
           <dd><div class="progress progress-warning progress-striped">
              <div class="bar" style="width: <@- task_percent @>%;"></div>
           </div></dd>
        </dl>
     </div>
  </div>
  <hr/>
  <div class="row-fluid">
     <div>
       <ul class="thumbnails">
         <div class="row-fluid">
           <li>
             <h3>Tasks</h3>
             <table class="table table-striped" id="task-list">

           </table>
        </li>
     </div>
     <div class="row-fluid">
      <li class="span2">
        <h3>Funding</h3>
        <a href="#fundModal" role="button" class="btn btn-primary" data-toggle="modal">Fund this project</a>
        <div id="fundModal" class="modal hide fade">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h3>Fund this project</h3>
         </div>
         <div class="modal-body">
            <p>How much do you want to contribute?</p>
            <input type="text" id="moneyAmount"/>
         </div>
         <div class="modal-footer">
            <button type="button" class="btn btn-primary contribute" data-dismiss="modal">Contribute!</button>
         </div>
      </div>
   </li>
   <li class="span2">
     <h3>Contributers</h3>
     <ul id="contributor-list">

    </ul>
 </li>
 <li class="span8">
  <h3>Comments</h3>
  <form id="commentsForm" method="post" action="">
    <input type="text" class="span5" id="comment"/>
    <input type="submit" value="Comment" class="btn btn-primary span2 comment"/>
 </form>

 <table class="table table-striped">
   <thead>
   <tr><th class="span3">User</th><th class="span9">Comment</th></tr>
   </thead>
   <tbody id="comment-list">

   </tbody>
</table>
</li>
</div>
</ul>
</div>
</div>
</script>
