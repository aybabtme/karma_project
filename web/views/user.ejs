<script type="text/template" id="user-view-template">
 	<div class="row-fluid">

        <div class="span4">
            <img src="<@-userpicture@>" id="profile-img">
        </div>
        <div class="span8">
            <dl class="dl-horizontal">
                <dt>Username</dt>
                <dd><@-name@></dd>
                <dt>Karma</dt>
                <dd><@-karma@></dd>
                <hr/>
                <dt>Total Fund Contributed</dt>
                <dd>$<@-total_funds@></dd>
                <dt>Total Tasks Done</dt>
                <dd><@-total_tasks@></dd>

            </dl>
        </div>

    </div>

    <hr/>
    <div class="row-fluid">
        <div>
            <ul class="thumbnails">
                
                <li class="span2">
                    <h3>Badges</h3>
                    <ul>
                        <li>badge 1</li>
                        <li>badge 2</li>
                        <li>badge 3</li>
                    </ul>
                </li>
                
                <li class="span4">
                    <h3>Projects Contributed Money For</h3>
                    <@ if (total_funds) { @>
                    <table class="table table-striped">
                    	<thead>
                    		<tr><th class="span4">Project</th><th class="span8">Money</th></tr>
                    	</thead>
                        <tbody id="funds-list">
                        </tbody>
                    </table>
                    <@  } else{ @>
                    <p>No Funds :(</p>
                    <@ } @>
                </li>

                <li class="span6">
                    <h3>Projects Previously Worked On</h3>
                    <@ if (total_tasks) { @>
                    <table class="table table-striped">
                    <thead>
                    	<tr><th class="span4">Project</th><th class="span8">Task</th></tr>
                    </thead>
                    <tbody id="user-tasks-list">
                       </tbody>
                    </table>
                     <@  } else{ @>
                    <p>No Tasks Done :(</p>
                    <@ } @>
                </li>

            </ul>
        </div>
    </div>
</script>